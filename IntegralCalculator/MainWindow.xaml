<?xml version="1.0" encoding="utf-8"?>
    <Window x:Class="IntegralCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вычисление интеграла - Гилев Н.А. 3-47"
        Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Вычисление определённого интеграла" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20" Foreground="#FF003366"/>

        
        <TextBlock Grid.Row="1" Grid.Column="0" 
                   Text="Функция:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,5" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="1" Grid.Column="1" 
                   Text="f(x) = 2x - ln(7x) - 12" 
                   FontWeight="Bold" Foreground="#FF0066CC"/>

        
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Пределы интегрирования:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,10,5" FontWeight="SemiBold"/>
        <TextBlock Grid.Row="2" Grid.Column="1" 
                   Text="от 1 до 100 000" 
                   FontWeight="Bold" Foreground="#FF0066CC"/>

        
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Количество разбиений (n):" 
                   VerticalAlignment="Center" 
                   Margin="0,10,10,0" FontWeight="SemiBold"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Name="txtPartitions" 
                 Text="10000" 
                 Margin="0,10,0,0" 
                 Height="30" 
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 BorderBrush="#FF0078D7" 
                 BorderThickness="2"/>

        
        <Button Grid.Row="4" Grid.ColumnSpan="2" 
                Content="ВЫЧИСЛИТЬ ИНТЕГРАЛ" 
                Click="CalculateButton_Click" 
                Height="40" 
                Margin="0,25,0,10" 
                Background="#FF0078D7" 
                Foreground="White" 
                FontSize="14" 
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect ShadowDepth="3" Opacity="0.3"/>
            </Button.Effect>
        </Button>

        
        <TextBlock Grid.Row="5" Grid.ColumnSpan="2" 
                   Text="Результаты вычисления:" 
                   FontWeight="Bold" 
                   FontSize="14"
                   Margin="0,15,0,10" 
                   Foreground="#FF003366"/>

        
        <Border Grid.Row="6" Grid.ColumnSpan="2" 
                BorderBrush="#FFCCCCCC" 
                BorderThickness="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="0,0,0,10" 
                Padding="15">
            <StackPanel>
                <TextBlock Name="txtTrapezoidalResult" 
                           Margin="0,5" 
                           FontSize="13" 
                           TextWrapping="Wrap"/>
                <TextBlock Name="txtMidpointResult" 
                           Margin="0,5" 
                           FontSize="13" 
                           TextWrapping="Wrap"/>
                <TextBlock Name="txtDifference" 
                           Margin="0,10,0,0" 
                           FontSize="13" 
                           TextWrapping="Wrap" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        
        <TextBlock Grid.Row="7" Grid.ColumnSpan="2" 
                   Name="txtTime" 
                   Margin="0,5" 
                   FontWeight="Bold" 
                   Foreground="DarkGreen" 
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
